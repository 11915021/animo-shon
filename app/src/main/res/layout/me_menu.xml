<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginBottom="6dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#346110"
            android:gravity="center"
            android:text="SETTINGS"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:drawableTint="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="615dp"
            android:layout_weight="1"
            android:background="#C2DACD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/myProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textColor="#346110"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Account/Cards"
                    android:textColor="#346110"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="F.A.Q."
                    android:textColor="#346110"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="#346110"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/log_out"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Log Out"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#346110" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="#FFFFFF"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:tint="#00956767"
                app:srcCompat="@drawable/button_home_black" />

            <ImageButton
                android:id="@+id/likesButton"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_like_black" />

            <ImageButton
                android:id="@+id/purchasesButton"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_purchases_black" />

            <ImageButton
                android:id="@+id/meButton"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_me_green" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>