<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Add Product" />

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/noimage"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#346110"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Add Product"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_product_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:hint="Product Name..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <EditText
        android:id="@+id/product_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Brand..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_brand"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Description..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Price..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="210dp"
        />
    <EditText
        android:id="@+id/product_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:hint="Stock..."
        />

    <Button
        android:id="@+id/add_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="75dp"
        android:background="#346110"
        android:text="Add Product"

        app:backgroundTint="#346110" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_below="@+id/add_product_button"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:tint="#00956767"
            app:srcCompat="@drawable/button_home_green" />

        <ImageButton
            android:id="@+id/editproductsButton"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:tint="#00956767"
            app:srcCompat="@drawable/button_products_black" />

        <ImageButton
            android:id="@+id/ordersButton"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:tint="#00956767"
            app:srcCompat="@drawable/button_deliveries_black" />

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:tint="#00956767"
            app:srcCompat="@drawable/button_logout_filled" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>



</RelativeLayout>